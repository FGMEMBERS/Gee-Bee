<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Gee-Bee/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m>  0.797 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.764 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg> -15 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Gee-Bee/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> 0.979 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.467 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <type>rotate</type>
    <object-name>intverriere</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.25 </ind><dep> 10 </dep></entry>
      <entry><ind> 0.50 </ind><dep> 20 </dep></entry>
      <entry><ind> 0.75 </ind><dep> 45 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 90 </dep></entry>
    </interpolation>
    <axis>
      <x1-m>  1.445 </x1-m>
      <y1-m>  0.166 </y1-m>
      <z1-m>  0.759 </z1-m>
      <x2-m>  1.113 </x2-m>
      <y2-m>  0.234 </y2-m>
      <z2-m>  0.759 </z2-m>
    </axis>
  </animation>

</PropertyList>

